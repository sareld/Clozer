<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.du.nearby.Clozer.BlankFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3a3335"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="220dp"
            android:layout_height="160dp"
            android:layout_centerVertical="true"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/editText_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button_start"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="38dp"
            android:layout_weight="0.07"
            android:backgroundTint="@color/bubble_color"
            android:ems="10"
            android:hint="enter user name"
            android:inputType="textPersonName"
            android:shadowColor="@color/bubble_color"
            android:textAlignment="center"
            android:paddingTop="180dp"
            android:textColor="@color/bubble_color"
            android:textColorHighlight="@color/bubble_color"
            android:textColorHint="@color/bubble_color"
            android:textColorLink="@color/bubble_color" />

        <Button
            android:id="@+id/button_start"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="123dp"
            android:background="@drawable/man_login" />

    </LinearLayout>

</FrameLayout>
